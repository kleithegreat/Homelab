# Global options
{
	# For local/internal use, use internal CA
	# Remove this block if you have a real domain with public DNS
	local_certs
	auto_https disable_redirects
}

# Homepage
homepage.{{ domain }} {
	reverse_proxy homepage:3000
}

# AdGuard
adguard.{{ domain }} {
	reverse_proxy adguard:3000
}

# Vaultwarden
vault.{{ domain }} {
	reverse_proxy vaultwarden:80
}

# Microbin
bin.{{ domain }} {
	reverse_proxy microbin:8080
}

# Copyparty
files.{{ domain }} {
	reverse_proxy copyparty:3923
}

# Immich
photos.{{ domain }} {
	reverse_proxy immich-server:2283
}

# Jellyfin
media.{{ domain }} {
	reverse_proxy jellyfin:8096
}

# Paperless
docs.{{ domain }} {
	reverse_proxy paperless:8000
}

# Gitea
git.{{ domain }} {
	reverse_proxy gitea:3000
}

# Karakeep
keep.{{ domain }} {
	reverse_proxy karakeep:3000
}

# Uptime Kuma
status.{{ domain }} {
	reverse_proxy uptime-kuma:3001
}

# Kavita
books.{{ domain }} {
	reverse_proxy kavita:5000
}

# PairDrop
drop.{{ domain }} {
	reverse_proxy pairdrop:3000
}

# Arr Stack
# Sonarr
tv.{{ domain }} {
	reverse_proxy sonarr:8989
}

# Radarr
movies.{{ domain }} {
	reverse_proxy radarr:7878
}

# Prowlarr
indexers.{{ domain }} {
	reverse_proxy prowlarr:9696
}

# qBittorrent
downloads.{{ domain }} {
	reverse_proxy qbittorrent:8080
}